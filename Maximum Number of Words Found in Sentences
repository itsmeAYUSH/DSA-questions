class Solution {
    public int mostWordsFound(String[] sentences) {
        int max=0;
        for (int i=0;i<sentences.length;i++){
            
            int count=1;
            String temp =sentences[i]; 
            for(int j=0;j<temp.length();j++){
                if(temp.charAt(j)==' '){
                    count++;
                }
            }
            if(count>max){
                max=count;
            }
        }
        return max;
    }
}
